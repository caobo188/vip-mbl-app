/* pages/profile/profile.wxss */
.pf-header{
  display: flex;
  align-items: center;
  padding: 60rpx 40rpx;
  margin-bottom: 20rpx;
  background: #fff;
}
.pf-avator-box{
  flex: 1;
}
.pf-avator-box image{
  width: 160rpx;
  height: 160rpx;
  border-radius: 50%;
}
.pf-info-box{
  flex: 2;
}

.pf-bill{
  background: #fff;
  display: flex;
  align-items: center;
  padding: 0 40rpx;
  margin-bottom: 20rpx;
}
.pf-bill-item{
  flex: 1;
  text-align: center;
  padding: 40rpx 0;
}

.pf-asset{
  background: #fff;
}
.pf-asset-box{
  display: flex;
  margin-bottom: 20rpx;
}
.pf-title{
  border-bottom: 1rpx solid #e2e2e2;
  padding: 30rpx 40rpx;
  font-weight: bold;
  color: #333;
}
.pf-asset-item{
  flex: 1;
  padding: 40rpx 0;
  border-right: 1rpx solid #e2e2e2;
  text-align: center;
}
.pf-asset-item:last-child{
  border-right: 0;
}
.pf-cls{
  background: #fff;
}
.pf-cls-item{
  display: flex;
  padding: 30rpx 0;
  border-bottom: 1rpx solid #e2e2e2;
}
.pf-cls-label{
  flex: 1;
  padding-left: 40rpx;
}
.pf-cls-text{
  flex: 3;
  text-align: right;
  padding-right: 40rpx;
}
.pf-cls-item .contact-btn{
  padding-left:40rpx;
  font-size: 32rpx;
  width: 100%;
  color:#333;
  line-height:inherit;
  text-align:left;
  background:none;
  border-radius:0;
}
.pf-cls-item .contact-btn::after{
  border:0;
}